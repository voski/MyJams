<h1>Add a track</h1>

<form action="<%= tracks_url %>" method="post">
  <%= auth_input %>
  <label for="track_name">Name</label>
  <input type="text"
   name="track[name]"
   id='track_name'
   value="<%= @track.name %>"><br>

  <label for="track_album_id">Album</label>
  <select name="track[album_id]" id="album_band_id">
    <% Album.all.each do |album| %>
      <option
        <%= params[:album_id].to_i == album.id ? "selected" : ""%>
        value="<%= album.id %>">
        <%= album.name %>
      </option>
    <% end %>
  </select><br>

  <% Track::TRACK_TYPES.each do |track_type| %>
  <label for="track_type_<%= track_type %>">
    <%= "#{ track_type }" %>
  </label>
  <input type="radio"
    name="track[track_type]"
    id="album_type_<%= track_type %>"
    value="<%= track_type %>"
    <%= 'checked="checked"' if @track.track_type == track_type %>>
  <% end %><br>

  <input type="submit" value="submit">
</form>
